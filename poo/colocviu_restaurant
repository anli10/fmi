#include <iostream>
#include <cstring>
#include <vector>
#include <string>
using namespace std;

struct Data{
    int zi,luna,an;
};
class produs{
    //string denprod;
    float pretprod;
public:
    string denprod;
    produs(){};
    produs(string d,float p){
        denprod=d;
        pretprod=p;
    }
    produs(string d){
        denprod=d;
    }
    friend ostream& operator<<(ostream& os,produs p){
        os<<"("<<p.denprod<<")";
        // <<","<<p.pretprod<<")";
        return os;
    }
    friend istream& operator>>(istream& in,produs &p){
        in>>p.denprod;
        return in;
        //>>p.pretpros<<")";
    }
};
class comanda{
    int num;
    produs prod;
    int nrportii;
    int zi;
    int luna;
    int an;
public:
    comanda(){}
    comanda(string s,int nr,int z,int l,int a):prod(s){
        
        nrportii=nr;
        zi=z;
        luna=l;
        an=a;
    }
    comanda(string s,int nr):prod(s){
        nrportii=nr;
    }
    friend ostream& operator<<(ostream& os,comanda c){
        os<<"("<<c.prod<<","<<c.nrportii<<")";
        return os;
    }
    friend istream& operator>>(istream& in,comanda &c){
        in>>c.prod>>c.nrportii;
        return in;
    }

    comanda operator+(int i){
        comanda temp;
        temp.prod=prod;
        temp.nrportii=nrportii+i;
        return temp;
    }
    comanda operator ++(int){
        comanda temp;
        temp.prod=prod;
        temp.nrportii=nrportii;
        nrportii++;
        return temp;
    }
    void del(){
        this->nrportii=0; }
};
class ospatar{
    char nume[30];
    vector<comanda>comenzi;
    int nrcomenzi;
    char gen;
    int varsta;
public:
    ospatar(char o[30],comanda c[],int nr,char g,int v){
        strcpy(nume,o);
        //for(int i=0;i<4;i++)
        //comenzi[i]=c[i];
        nrcomenzi=nr;
        gen=g;
        varsta=v;
    }
    friend ostream& operator<<(ostream& os,ospatar o){
        os<<"("<<o.nume<<","<<&o.comenzi<<","<<o.nrcomenzi<<","<<o.gen<<","<<o.varsta<<")";
        return os;
    }
    int operator >(ospatar o){
        if(nrcomenzi>o.nrcomenzi) return 1;
        else return 0;
    }
    int operator ==(ospatar o){
        if(nrcomenzi==o.nrcomenzi) return 1;
        else return 0;
    }
    int operator <(ospatar o){
        if(nrcomenzi<o.nrcomenzi) return 1;
        else return 0;
    }
    string Nume(){
        return nume;
    }
};
class comspec:public virtual comanda{
    char *obsc;
    float pretsul;
};
class comonline:public virtual comanda{
    char adresa;
    int comlivr;
};
